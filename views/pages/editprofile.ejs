<% layout("/layouts/boilerplate") %>
    
<body>
    <h3>Edit your mistakes</h3>
    <form method ="POST" action="/explore/profile/<%=stamp._id%>?_method=PUT" novalidate class="needs-validation">
    <div class="mb-3">
    <label for="name" class="form-label">Name</label>           
    <input name="user[name]" value="<%=user.name%>" type="text" class="form-control" required>
    <div class="invalid-feedback ">Enter your name
    </div>
    </div>
    <label for="email" class="form-label">Email</label>           
    <input name="user[email]" value="<%=user.email%>" type="email" class="form-control" required>
    <div class="invalid-feedback ">Enter your email
    </div>
    <!-- <div class="mb-3">
    <label for="image" class="form-label">Image Link</label>
    <input name="listing[image]" value ="<%=listing.image%>" type="text" class="form-control" required>
    <div class="invalid-feedback "> Enter a valid URL </div>
    </div> -->
    <label for="social_insta" class="form-label">Instagram</label>           
    <input name="user[social_insta]" value="<%=user.social_insta%>" type="text" class="form-control">

    </div>
    <div class="mb-3 col-md-8">
    <label for="country" class="form-label">Country</label>
    <input name="listing[country]" value="<%=listing.country%>" type="text" class="form-control" required>
    <div class="invalid-feedback ">Enter the Country name </div>
    </div>
    </div>
    <div class="mb-3">
    <label for="location" class="form-label">Location</label>
    <textarea name="listing[location]"   type="text" class="form-control" required> <%=listing.location%></textarea>
    <div class="invalid-feedback ">Enter a valid Location </div>
    </div>
    <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</body>
</html>
